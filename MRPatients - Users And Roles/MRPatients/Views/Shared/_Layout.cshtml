<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MRPatients</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.jpg">Conestoga Clinic</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    @if (User.IsInRole("administrators"))
                    {
                        <ul class="navbar-nav flex-grow-1 align-content-center">
                            <li class="nav-item align-content-center">
                                <div class="dropdown show">
                                    <a class="dropdown-toggle" role="button" id="dropdownmenu" data-toggle="dropdown">Security</a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownmenu">
                                        <a class="dropdown-item" asp-controller="MRRole" asp-action="ListRole">User Maintenance</a>
                                        <a class="dropdown-item" asp-controller="MRRole" asp-action="ListRole">Role Maintenance</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <ul class="navbar-nav ali" style="text-align:left">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MRCountry" asp-action="Index">Country&nbsp;&nbsp;&nbsp;&nbsp;</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1 align-content-center">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MRCountry" asp-action="Index">Country</a>
                            </li>
                        </ul>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="font-weight-bold" style="color:red">@TempData["message"]</div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div style="float:left">
                &copy; 2022 <a href="mailto:mrobancho3958@conestogac.on.ca">Marlon Robancho - section 2</a>
            </div>
            <div style="float:right">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                &nbsp;
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
